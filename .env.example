# Wflo Environment Configuration
# Copy this file to .env and update with your values

# Application
APP_ENV=development
LOG_LEVEL=INFO
DEBUG=false

# Database (PostgreSQL)
# Local PostgreSQL
DATABASE_URL=postgresql+asyncpg://wflo_user:wflo_password@localhost:5432/wflo

# Supabase PostgreSQL (recommended for production)
# Get connection details from: https://app.supabase.com/project/_/settings/database
# Format: postgresql+asyncpg://postgres:[PASSWORD]@[PROJECT_REF].supabase.co:5432/postgres
# DATABASE_URL=postgresql+asyncpg://postgres:your-password@db.xxxxxxxxxxxxxxxxxxxx.supabase.co:5432/postgres

# Connection Pool Settings
DATABASE_POOL_SIZE=20
DATABASE_MAX_OVERFLOW=10

# Redis
REDIS_URL=redis://localhost:6379/0
REDIS_MAX_CONNECTIONS=50

# Kafka
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_CLIENT_ID=wflo-producer
KAFKA_GROUP_ID=wflo-consumer-group

# Temporal
TEMPORAL_HOST=localhost:7233
TEMPORAL_NAMESPACE=default
TEMPORAL_TASK_QUEUE=wflo-tasks

# Sandbox
SANDBOX_IMAGE=wflo/runtime:python3.11
SANDBOX_CPU_LIMIT=0.5
SANDBOX_MEMORY_LIMIT=512m
SANDBOX_TIMEOUT_SECONDS=300
SANDBOX_NETWORK_ACCESS=false

# Cost Tracking
DEFAULT_BUDGET_LIMIT_USD=100.00
BUDGET_WARNING_THRESHOLD_50=true
BUDGET_WARNING_THRESHOLD_75=true
BUDGET_WARNING_THRESHOLD_90=true

# Observability
OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317
OTEL_SERVICE_NAME=wflo
JAEGER_AGENT_HOST=localhost
JAEGER_AGENT_PORT=6831
PROMETHEUS_PORT=9090

# Approval Gates
APPROVAL_TIMEOUT_DEFAULT=3600
APPROVAL_TIMEOUT_POLICY=reject  # reject or approve
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL

# Security
SECRET_KEY=change-this-to-a-random-secret-key
API_KEY_SALT=change-this-to-random-salt

# External APIs (for LLM tracking)
# OPENAI_API_KEY=sk-...
# ANTHROPIC_API_KEY=
OPENAI_MODEL=gpt-5
